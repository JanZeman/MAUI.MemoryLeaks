<?xml version="1.0" encoding="utf-8" ?>
<view:MauiPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MAUI.MemoryLeaks.View.HomePage"
    xmlns:view="clr-namespace:MAUI.MemoryLeaks.View"
    xmlns:viewmodel="clr-namespace:MAUI.MemoryLeaks.ViewModel"
    x:DataType="viewmodel:HomeViewModel"
    Title="{Binding PageName}">
    <VerticalStackLayout Padding="10">
        <Label 
            Text="{Binding Motivation}"
            FontAttributes="Italic"
            FontSize="14"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Margin="0,0,20,0" />

        <Label
            Text="{Binding MemorySize}"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Margin="0,20,0,20" />

        <Button
            Margin="5"
            Text="ObservableCollection"
            Command="{Binding NavigateToCase01Command}" />

        <Button
            Margin="5"
            Text="Re-assign ObservableCollection"
            Command="{Binding NavigateToCase01Workaround01Command}" />

        <Label
            Text="{Binding Description}"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Margin="0,20,0,20" />
    </VerticalStackLayout>
</view:MauiPage>