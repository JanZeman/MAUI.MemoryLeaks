<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MAUI.MemoryLeaks.View.HomePage"
    xmlns:viewmodel="clr-namespace:MAUI.MemoryLeaks.ViewModel"
    x:DataType="viewmodel:HomeViewModel"
    Title="Home">
    <VerticalStackLayout Padding="10">
        <Label 
            Text="{Binding Motivation}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label 
            Text="{Binding Text}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label
            Text="{Binding MemorySize}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            Text="Case 1: ObservableCollection"
            Command="{Binding NavigateToCase01Command}" />
    </VerticalStackLayout>
</ContentPage>