<?xml version="1.0" encoding="utf-8" ?>
<view:MauiPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MAUI.MemoryLeaks.View.Case02Page"
    xmlns:view="clr-namespace:MAUI.MemoryLeaks.View"
    xmlns:viewmodel="clr-namespace:MAUI.MemoryLeaks.ViewModel"
    x:DataType="viewmodel:Case02ViewModel"
    Title="{Binding PageName}">
    <VerticalStackLayout Padding="15">
        <view:MemoryUsageView />

        <Button
            Margin="10"
            Text="Problem"
            Command="{Binding OpenCase02ProblemCommand}" />

        <Button
            Margin="10"
            Text="Solution / Workaround not found yet"
            IsEnabled="False"
            Command="{Binding OpenCase02SolutionCommand}" />

        <Label
            HorizontalOptions="Start"
            Margin="10"
            FontAttributes="Bold"
            TextColor="Red"
            Text="{Binding Recommendation}" />

        <Label
            HorizontalOptions="Start"
            Margin="10, 25, 10, 0"
            FontAttributes="Italic"
            Text="{Binding Description}" />
    </VerticalStackLayout>
</view:MauiPage>